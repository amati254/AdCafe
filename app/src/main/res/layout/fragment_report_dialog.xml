<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:id="@+id/baseLayout">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topText"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:padding="10dp"
        android:text="Indicate what you find wrong with this ad." />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:layout_width="match_parent"
            android:padding="20dp"
            android:id="@+id/reportRadioGroup"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonAbusive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Abusive    i.e contains vulgar or insulting language." />

            <RadioButton
                android:id="@+id/radioButtonExplicit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Sexually Explicit    i.e contains sexually explicit images or language.." />


            <RadioButton
                android:text="Offensive   i.e contains messages that discriminates various people."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/radioButton3"
                android:layout_weight="1" />

            <RadioButton
                android:text="It just doesn't belong here!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:text="submit"
                    android:textColor="@color/primary_text"
                    android:id="@+id/submitButton"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:text="Cancel"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/primary_text"
                    android:id="@+id/cancelButton"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>


