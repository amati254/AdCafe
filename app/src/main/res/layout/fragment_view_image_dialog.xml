<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:id="@+id/baseLayout">

    <ImageView
        android:id="@+id/theAdImage"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:layout_margin="0.3dp"
        android:background="@drawable/owl"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:layout_marginRight="10dp"
        android:id="@+id/bottomNavButtons"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_action_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/backText"
                android:text="Back."
                android:textSize="8dp"
                android:paddingTop="40dp"
                android:paddingLeft="23dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/shareBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/ic_action_share"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/shareText"
                android:text="Share."
                android:textSize="8dp"
                android:paddingTop="40dp"
                android:paddingLeft="19dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/Website"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/ic_action_website"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/websiteTextxx"
                android:text="Visit Website."
                android:textSize="8dp"
                android:paddingTop="40dp"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/Delete"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/ic_action_delete" />

            <TextView
                android:id="@+id/DeleteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="19dp"
                android:paddingTop="40dp"
                android:text="Unpin."
                android:textSize="8dp" />
        </RelativeLayout>

    </LinearLayout>

