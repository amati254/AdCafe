<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/mainLayout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="19sp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/primary_text"
            android:layout_marginTop="20dp"
            android:text="Morning Notifications."
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:id="@+id/explanation"
            android:layout_marginLeft="20dp"
            android:text="Do you wish blah blah blah..."
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Set time : 9:45 "
            android:id="@+id/setTimeText"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:text="Hint: Click on the clock icon to set your preferred time."-->
            <!--android:id="@+id/setTimeHint"-->
            <!--android:layout_height="wrap_content" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="50dp">

            <ImageButton
                android:layout_width="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_action_clock"
                android:id="@+id/pickTimeIcon"
                android:layout_marginTop="10dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:text="No"
                android:layout_marginLeft="30dp"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/continueBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:text="Yes."
                android:textColor="@color/colorPrimary"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>